<h1><%= link_to(h("Estamation: #{estamation.title} ##{estamation.id}"), estamation_url) %></h1>


<%= textilizable(estamation, :description, :only_path => false) %>

<% if estamation.attachments.any? %>
  <fieldset class="attachments"><legend><%= l(:label_attachment_plural) %></legend>
  <% estamation.attachments.each do |attachment| %>
    <%= link_to_attachment attachment, :download => true, :only_path => false %>
    (<%= number_to_human_size(attachment.filesize) %>)<br />
  <% end %>
  </fieldset>
<% end %>