<h2>Add Estamation</h2>

<%= labelled_form_for @estamation, :url => estamation_create_path,
                             :html => {:id => 'estamation-form', :multipart => true} do |f| %>
  <%= error_messages_for 'estamation' %>
  <div class="box tabular">
    <div id="all_attributes">
  <%= render 'estamations/form', :locals => {:f => f} %>
  <%= submit_tag l(:button_create) %>
  <%= submit_tag l(:button_create_and_continue), :name => 'continue' %>
</div>
</div>
<% end %>

<%= javascript_tag "$('#estamation_title').focus();" %>